@{
    ViewData["Title"] = "Bean Scene Home Page - Staff";
}
<header class="py-5">
            <div class="container px-lg-5">
                <div class="p-4 p-lg-5 rounded-3 text-center">
                    <div class="m-4 m-lg-5">
                        <h1 class="fw-bold">Staff Hub</h1>
                    </div>
                </div>
            </div>
        </header>
        <!-- Page Content-->
        <section class="pt-4">
            <div class="container px-lg-5">
                <!-- Page Features-->
                <div class="row gx-lg-5">
                    <div class="col-lg-6 col-xxl-6 mb-5"  onclick='window.location.href="/Staff/Calendar/Index"' >
                        <div class="card bg-primary bg-gradient h-100">
                            <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                                <i class="bi bi-calendar2-week"  style="font-size: 8rem;"></i>
                                <h4>Sitting Calendar</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-xxl-6 mb-5" onclick='window.location.href="/Staff/list/indexes"'>
                        <div class="card bg-primary bg-gradient h-100">
                            <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                                <i class="bi bi-plus-circle"  style="font-size: 8rem;"></i>
                                <h4>Reservations</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .card{
            border-style: solid;
            border-color: transparent;
            border-width: 2px;
        }
    </style>
}

@section Scripts{
    <script>
            $(document).ready(function() {
              $(".card").hover(function() {
                  let card = $(this);
                  card.css("border-color", "blue");
                  card.animate({
                      left: '-=25px',
                    height: '+=50px',
                    width: '+=50px'
                  }, 'slow' );
                },
                function() {
                  let card = $(this);
                  card.css("border-color", "transparent");
                  card.animate({
                    left: '+=25px',
                    height: '-=50px',
                    width: '-=50px'
                    }, 'slow');
                }
              );
            });
    </script>
}